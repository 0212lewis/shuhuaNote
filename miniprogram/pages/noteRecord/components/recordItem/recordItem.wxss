/* pages/noteRecord/components/recordItem/recordItem.wxss */
.record-item {
    background-color: #ffffff;
    margin-bottom: 20rpx;
    padding: 20rpx;
    box-shadow: 0 1px 2px -2px #a8a4a429, 0 3px 6px #bdbbbb1f, 0 5px 12px 4px #b6b3b317;
}

.header {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.left-pane {
    display: flex;
    align-items: center;
}
.title {
    font-weight: 600;
    margin-left: 15px;
}

.header-tag {
    width: 5px;
    height: 20px;
    background-color: #FF9933;
    border-radius: 25%;
}

.date {
    font-size: 10px;
    color: gray;
}

.detail {
    font-size: 14px;
    font-weight: 400;
    margin-bottom: 15px;
}

.detail > rich-text {
 
}

.footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
}